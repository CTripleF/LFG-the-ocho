<section class="column is-6">
  <ul class="post-list">
  {{#each posts as |post|}}
  <li>
    <article class="post">
      <div class="card">
        <header class="card-header">
        <p class="card-header-title has-text-info">{{post.user.username}}</p>
        <p class="card-header-title has-text-dark">{{post.title}}</p>
        </header>
        <div class="card-content">
        <a href="{{post.discord_link}}">{{post.discord_link}}</a>
        <br>
        <span class="has-text-danger">Game: </span><span>{{post.game_title}}</span>
        <br>
        <span class="has-text-danger">Console: </span><span>{{post.game_console}}</span>
        <br>
        <span class="has-text-danger">Game Type: </span><span> {{post.game_type}}</span>
        </div>
      </div>
    </article>
    <br>
  </li>
  {{/each}}
</ul>
</section>